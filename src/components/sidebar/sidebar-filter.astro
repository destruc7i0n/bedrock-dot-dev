---
import { t } from "@lib/i18n";
import { MagnifyingGlassIcon } from "@heroicons/react/20/solid";

const filterTitle = t("component.sidebar.filter_title");
---

<div class="mt-4">
  <label class="sr-only mb-1 block text-sm font-bold" for="filter">
    {filterTitle}
  </label>
  <div class="relative w-full rounded-lg">
    <div
      class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-2"
    >
      <span class="leading-4 text-gray-500">
        <MagnifyingGlassIcon className="pointer-events-none h-4 w-4" />
      </span>
    </div>
    <input
      id="filter"
      class="block w-full rounded-md border-gray-300 bg-white px-4 pl-8 leading-4 focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50 dark:border-dark-gray-800 dark:bg-dark-gray-900 dark:text-gray-200 dark:placeholder-gray-400 xl:pl-7"
      type="text"
      placeholder={filterTitle}
    />
  </div>
</div>

<script>
  import { sidebarFilter } from "@stores/sidebar-filter";

  document.addEventListener("astro:page-load", () => {
    const input = document.getElementById("filter") as HTMLInputElement;
    if (!input) return;

    input.value = sidebarFilter.get();
    const unsubscribe = sidebarFilter.subscribe((value) => {
      input.value = value;
    });

    const onInput = () => sidebarFilter.set(input.value);
    input.addEventListener("input", onInput);

    document.addEventListener(
      "astro:before-preparation",
      () => {
        unsubscribe();
        input.removeEventListener("input", onInput);
      },
      { once: true },
    );
  });
</script>
