---
import { t } from "@lib/i18n";
---

<header>
  <nav
    class="mx-auto flex max-w-screen-lg items-center justify-between px-4 py-6 sm:px-6 md:px-8 lg:px-0"
  >
    <a href="/" class="flex items-center">
      <div
        class="text-2xl font-normal leading-tight tracking-tight text-gray-900 dark:text-white"
      >
        bedrock.dev
      </div>
    </a>
    <ul class="flex items-center gap-2 lg:gap-6">
      <li>
        <a
          class="rounded-lg p-1.5 font-medium text-gray-500 transition-colors hover:bg-gray-200 hover:text-gray-900 dark:text-gray-300 dark:hover:bg-dark-gray-800 dark:hover:text-gray-100"
          href="https://wiki.bedrock.dev"
          target="_blank"
          rel="noopener"
        >
          {t("component.header.wiki_link")}
        </a>
      </li>
      <li>
        <a
          href="/packs"
          class="rounded-lg p-1.5 font-medium text-gray-500 transition-colors hover:bg-gray-200 hover:text-gray-900 dark:text-gray-300 dark:hover:bg-dark-gray-800 dark:hover:text-gray-100"
        >
          {t("component.header.packs_link")}
        </a>
      </li>
      <li>
        <a
          class="rounded-lg p-1.5 font-medium text-gray-500 transition-colors hover:bg-gray-200 hover:text-gray-900 dark:text-gray-300 dark:hover:bg-dark-gray-800 dark:hover:text-gray-100"
          href="https://discord.gg/wAtvNQN"
          target="_blank"
          rel="noopener"
        >
          {t("component.header.discord_link")}
        </a>
      </li>
    </ul>
  </nav>
</header>
