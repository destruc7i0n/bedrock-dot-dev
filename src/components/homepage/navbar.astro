---
import { t } from "@lib/i18n";
---

<div class="py-6">
  <nav
    class="mx-auto flex max-w-screen-lg items-center justify-between px-4 sm:px-6 md:px-8 lg:p-0"
  >
    <a href="/" class="flex items-center">
      <div
        class="text-2xl font-normal leading-tight tracking-tight text-gray-900 dark:text-white"
      >
        bedrock.dev
      </div>
    </a>
    <div class="flex items-center">
      <a
        class="ml-6 font-medium text-gray-500 transition duration-150 ease-in-out hover:text-gray-900 dark:text-gray-300 dark:hover:text-gray-100 lg:ml-10"
        href="https://wiki.bedrock.dev"
        target="_blank"
        rel="noopener"
      >
        {t("component.header.wiki_link")}
      </a>
      <a
        href="/packs"
        class="ml-6 font-medium text-gray-500 transition duration-150 ease-in-out hover:text-gray-900 dark:text-gray-300 dark:hover:text-gray-100 lg:ml-10"
      >
        {t("component.header.packs_link")}
      </a>
      <a
        class="ml-6 font-medium text-gray-500 transition duration-150 ease-in-out hover:text-gray-900 dark:text-gray-300 dark:hover:text-gray-100 lg:ml-10"
        href="https://discord.gg/wAtvNQN"
        target="_blank"
        rel="noopener"
      >
        {t("component.header.discord_link")}
      </a>
    </div>
  </nav>
</div>
