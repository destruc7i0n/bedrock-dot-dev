---
import { cn } from "@lib/cn";
import { t } from "@lib/i18n";

import ModeSelect from "./theme/mode-select.astro";

interface Props {
  darkClassName?: string;
  dark?: boolean;
  outline?: boolean;
  showToggles?: boolean;
}

const {
  darkClassName = "bg-dark-gray-950",
  dark = false,
  outline = true,
  showToggles = true,
} = Astro.props;

const darkClass = "bg-gray-50 dark:" + darkClassName;
---

<div
  class={cn(
    "w-full py-12 px-4 overflow-hidden sm:px-6 lg:px-8",
    { [darkClass]: dark },
    { "border-t border-gray-200 dark:border-dark-gray-800": outline },
  )}
>
  <div class="mx-auto max-w-screen-lg space-y-3">
    <div class="flex flex-wrap justify-center gap-2 font-medium">
      <div class="text-gray-500 dark:text-gray-300">
        {t("component.footer.credits_prefix")}{" "}
        <a
          class="link"
          href="https://thedestruc7i0n.ca"
          target="_blank"
          rel="noopener"
        >
          destruc7i0n
        </a>
      </div>
    </div>
    <div class="flex flex-wrap justify-center gap-4 font-medium">
      <a
        class="link"
        href="https://github.com/destruc7i0n/bedrock-dot-dev"
        target="_blank"
        rel="noopener"
      >
        {t("component.footer.github")}
      </a>
      <a
        href="https://patreon.com/destruc7i0n"
        class="link"
        target="_blank"
        rel="noopener"
      >
        {t("component.footer.donate")}
      </a>
    </div>
    <div
      class="flex flex-wrap justify-center text-center font-medium text-gray-500 dark:text-gray-400"
    >
      <div class="px-2">
        <p>{t("component.footer.legal_mojang")}</p>
      </div>
    </div>

    {
      showToggles && (
        <div class="!mt-9 flex justify-center">
          <ModeSelect />
        </div>
      )
    }
  </div>
</div>
